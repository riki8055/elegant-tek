    <link
      rel="shortcut icon"
      href="/Images/Symbols/logo-symbol.png"
      type="image/x-icon"
    />
    <title>Careers - Elegant Tek</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"
    />
    <link rel="stylesheet" href="/CSS/style.css" />
    <link rel="stylesheet" href="/CSS/careers.css" />
  </head>
  <body>
    <div class="social-media-header">
      <div class="contact">
        <div class="phone">
          <i class="fa-sharp fa-solid fa-phone"></i>
          <span>Phone: +1-608-285-2631</span>
        </div>

        <div class="mail">
          <i class="fa-sharp fa-solid fa-envelope"></i>
          <span>Email: contact@eleganttek.com</span>
        </div>
      </div>

      <div class="social-media-links">
        <a
          href="https://www.facebook.com/profile.php?id=100092390304118"
          class="social-media-link"
          target="_blank"
        >
          <i class="fab fa-facebook-f"></i>
        </a>

        <a
          href="https://www.linkedin.com/company/elegant-tek/"
          class="social-media-link"
          target="_blank"
        >
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
    </div>
    <div class="container">
      <div class="tooltip">
        <!-- Show a message not delivered -->
        <p>Message delivered!</p>
        <button class="btn btn-close-tooltip">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <!-- Section 1 -->
      <section class="section-1">
        <a href="/" class="btn btn-prev">
          <i class="fas fa-arrow-left"></i>
        </a>
        <div class="section-1-heading-wrapper section-heading-wrapper">
          <div class="heading">
            <h1>career with us</h1>
            <div class="line"></div>
          </div>

          <div class="para">
            <p>
              Are you passionate about technology and looking for a career that
              challenges and inspires you?
            </p>
          </div>
        </div>
        <div class="swiper mainSwiper">
          <div class="swiper-wrapper">
            <div class="swiper-slide slide-1">
              <img src="/Images/Assets/Career/header_1.jpg" />
            </div>

            <div class="swiper-slide slide-2">
              <img src="/Images/Assets/Career/header_2.jpg" />
            </div>

            <div class="swiper-slide slide-3">
              <img src="/Images/Assets/Career/header_3.jpg" />
            </div>
          </div>
        </div>
      </section>
      <!-- End of Section 1 -->
      <!-- Section 2 -->
      <section class="section-2">
        <div class="job-filter">
          <div class="filter-control">
            <label for="job-position">Job Position</label>
            <select name="job-position" id="job-position">
              <option value="all">All</option>
              <option value="web-developer">Web Developer</option>
              <option value="graphic-designer">Graphic Designer</option>
              <option value="marketing-manager">Marketing Manager</option>
              <option value="seo-manager">SEO Manager</option>
              <option value="content-writer">Content Writer</option>
            </select>
          </div>

          <div class="filter-control">
            <label for="job-location">Job Location</label>
            <select name="job-location" id="job-location">
              <option value="all">All</option>
              <option value="new-york">New York</option>
              <option value="los-angeles">Los Angeles</option>
              <option value="chicago">Chicago</option>
              <option value="houston">Houston</option>
              <option value="phoenix">Phoenix</option>
            </select>
          </div>

          <div class="filter-control">
            <label for="job-type">Job Type</label>
            <select name="job-type" id="job-type">
              <option value="all">All</option>
              <option value="full-time">Full Time</option>
              <option value="part-time">Part Time</option>
              <option value="internship">Internship</option>
              <option value="freelance">Freelance</option>
            </select>
          </div>
        </div>

        <div class="job-cards">
          <% for(let job of fakeJobsJSON) { %>
          <div
            class="job-card"
            id="<%= job.jobID %>"
            job-location="<%= job.jobLocation %>"
            job-type="<%= job.jobType %>"
          >
            <div class="role">
              <p>
                <span class="position-number"><%= job.jobID %></span
                ><span class="location"><%= job.jobLocation %></span>
              </p>
              <h3 class="job-title"><%= job.jobTitle %></h3>
            </div>

            <a href="/careers/<%= job.jobID %>" class="btn btn-dark btn-details"
              >see details</a
            >
          </div>
          <% } %>

