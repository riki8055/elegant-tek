<%- include('partials/head') %>
<!-- Section 2 -->
<section class="section-2">
  <div class="section-2-content">
    <h1 class="section-2-heading">Join Our Team</h1>
    <p class="section-2-para">
      We are a dynamic and growing company that is passionate about leveraging
      technology to drive business success. We are always looking for talented
      and motivated individuals to join our team and help us achieve our goals.
      If you're looking for a challenging and rewarding career in the technology
      industry, we invite you to explore our open positions and consider
      becoming a part of our dynamic and growing organization.
    </p>
  </div>

  <% for(let job of jobs) { %>
  <div class="job-position">
    <div class="job-title">
      <h4>
        <span class="position-number"><%= job.jobPosition %></span
        ><span class="location"><%= job.jobLocation %></span>
      </h4>
      <h2 class="job-type"><%= job.jobTitle %></h2>
    </div>

    <a href="/careers/<%= job.jobPosition %>" class="btn btn-details"
      >see details</a
    >
  </div>
  <% } %>
</section>
<!-- End of Section 3 -->

<%- include('partials/foot') %>
